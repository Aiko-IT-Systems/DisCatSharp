{
"pdf": {
    "content": [
        {
        "files": [
            "api/**.yml",
            "api/index.md"
        ],
        "exclude": [
            "**/toc.yml",
            "**/toc.md"
        ]
        },
        {
        "files": [
        "articles/**.md",
        "articles/toc.yml",
        "articles/**/toc.yml",
        "natives/**.md",
        "faq/**.md",
        "toc.yml",
        "*.md",
            "pdf/*"
        ],
        "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site_pdf/**",
            "**/toc.yml",
            "**/toc.md"
        ]
        },
        {
        "files": "pdf/toc.yml"
        }
    ],
    "resource": [
        {
        "files": [
            "images/**"
        ],
        "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site_pdf/**"
        ]
        }
    ],
    "overwrite": [
        {
        "files": [
            "apidoc/**.md"
        ],
        "exclude": [
            "**/bin/**",
            "**/obj/**",
            "_site_pdf/**"
        ]
        }
    ],
    "wkhtmltopdf": {
        "additionalArguments": "--enable-local-file-access"
    },
    "dest": "_site_pdf"
    }
}
