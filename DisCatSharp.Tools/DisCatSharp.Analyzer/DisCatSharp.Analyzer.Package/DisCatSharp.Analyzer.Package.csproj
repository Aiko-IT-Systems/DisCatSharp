<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<SuppressDependenciesWhenPacking>true</SuppressDependenciesWhenPacking>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
	</PropertyGroup>

	<PropertyGroup>
		<Title>DisCatSharp Analyzer</Title>
		<PackageId>DisCatSharp.Analyzer</PackageId>
		<PackageVersion>1.0.0.0</PackageVersion>
		<Authors>AITSYS</Authors>
		<PackageIcon>logo-pride.png</PackageIcon>
		<RepositoryUrl>https://github.com/Aiko-IT-Systems/DisCatSharp</RepositoryUrl>
		<RestoreProjectStyle>PackageReference</RestoreProjectStyle>
		<PackageProjectUrl> https://docs.dcs.aitsys.dev/vs/</PackageProjectUrl>
		<PackageLicenseExpression />
		<PackageLicenseFile>LICENSE.md</PackageLicenseFile>
		<PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
		<Description>DisCatSharp Analyzer - a recommended developer dependency to make writing bots in DisCatSharp easier.

This package provides various custom analyzer rules specific for DisCatSharp. You can read more about the rules here: https://docs.dcs.aitsys.dev/vs/.
We also provide certain codefixes if we introduce breaking changes in the future.

Please install it to ensure we can do our changes, and you can receive our updates &lt;3</Description>
		<PackageReleaseNotes>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)/../../../RELEASENOTES.md"))</PackageReleaseNotes>
		<Copyright>Copyright 2022-2025 AITSYS</Copyright>
		<PackageTags>Analyzer, analyzers, DisCatSharp, DCS</PackageTags>
		<DevelopmentDependency>true</DevelopmentDependency>
		<NoPackageAnalysis>true</NoPackageAnalysis>
		<NuGetAuditSuppress>true</NuGetAuditSuppress>
		<NuGetAudit>false</NuGetAudit>
		<ProduceReferenceAssembly>false</ProduceReferenceAssembly>
		<TargetsForTfmSpecificContentInPackage>$(TargetsForTfmSpecificContentInPackage);AddNuGetDlls</TargetsForTfmSpecificContentInPackage>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<RepositoryType>git</RepositoryType>
		<IncludeSymbols>True</IncludeSymbols>
		<SymbolPackageFormat>snupkg</SymbolPackageFormat>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\..\..\DisCatSharp.Logos\logo-pride.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\..\LICENSE.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\..\..\README.md">
		  <Pack>True</Pack>
		  <PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
	<Target Name="AddNuGetDlls" BeforeTargets="_GetPackageFiles">
		<JoinItems Left="@(ResolvedCompileFileDefinitions)" LeftKey="NuGetPackageId" LeftMetadata="*" Right="@(PackageReference)" RightKey="" RightMetadata="*" ItemSpecToUse="Left">
			<Output TaskParameter="JoinResult" ItemName="_PackagesToPack" />
		</JoinItems>

		<ItemGroup>
			<_PackagesToPack Remove="@(_PackagesToPack)" Condition="%(NuGetPackageId) == 'NETStandard.Library'" />
			<_PackagesToPack Remove="@(_PackagesToPack)" Condition="%(_PackagesToPack.IncludeInPackage) != 'true'" />
		</ItemGroup>

		<Message Importance="High" Text="Adding DLLs from the following packages: @(_PackagesToPack->'%(NuGetPackageId)')" />
		<ItemGroup>
			<None Include="@(_PackagesToPack)" Pack="true" PackagePath="analyzers/dotnet/cs" />
			<None Include="$(OutputPath)\DisCatSharp.Analyzer.dll" Pack="true" PackagePath="analyzers/dotnet/cs" />
			<None Include="$(OutputPath)\DisCatSharp.Analyzer.CodeFixes.dll" Pack="true" PackagePath="analyzers/dotnet/cs" />
		</ItemGroup>
	</Target>
	<ItemGroup>
		<ProjectReference Include="..\DisCatSharp.Analyzer.CodeFixes\DisCatSharp.Analyzer.CodeFixes.csproj" />
		<ProjectReference Include="..\DisCatSharp.Analyzer\DisCatSharp.Analyzer.csproj" />
		<PackageReference Include="DisCatSharp.Attributes" Version="2025.3.27" PrivateAssets="All" IncludeInPackage="true" />
	</ItemGroup>

	<ItemGroup>
		<None Update="tools\*.ps1" CopyToOutputDirectory="PreserveNewest" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
